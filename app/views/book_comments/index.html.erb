<h3>There are some comments for <%= @book.name%> below:</h3>
<%if current_user%>
	<%= form_for [@book, @comment] do |c|%>
		<%= c.label :description, "Comment"%>
		<%= c.text_area :description%>
		<%= hidden_field_tag :page, params[:page] %>
		<%= c.submit%>
	<%end%>
<%end%>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Comment</th>
			<%if current_user%>
				<th>Edit</th>
				<th>Delete</th>
			<%end%>
		</tr>
	</thead>
	<tbody>

		<% @comments.each do |c|%>
		<tr>			
			<td><%= c.user.short_name%></td>
			<td><%= c.description%></td>
			<%if current_user && current_user == c.user%>
				<td><%= link_to "Edit", book_comments_path(@book, eid: c.id)%></td>
				<td><%= link_to "Delete", book_comment_path(@book, c, page: params[:page]), method: :delete, data: {confirm: "Are you sure?!!"}%></td>
			<%end%>
		</tr>
		<%end%>
	</tbody>
</table>
	<%= paginate @comments %>
	<br>