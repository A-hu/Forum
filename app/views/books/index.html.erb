
<table class = "table table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Author</th>
			<th>Show</th>
			<th>Edit</th>
			<th>Delete</th>
		</tr>
	</thead>
	<tbody>
	
		<% @books.each do |book|%>
		<tr>			
			<td><%= book.name%></td>
			<td><%= book.user.short_name%></td>
			<td><%= link_to "Show", book_path(book, page: params[:page])%></td>
			<%if current_user && current_user == book.user%>
				<td><%= link_to "Edit", edit_book_path(book, page: params[:page])%></td>
				<td><%= link_to "Delete", book_path(book, page: params[:page]), method: :delete, data: {confirm: "Are you sure?!!"}%></td>
			<%end%>
		</tr>
		<%end%>
	</tbody>
</table>

<%= link_to "New book", new_book_path%>
<%= paginate @books %>

